<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mushu.testintents.MainActivity"
    android:background="@drawable/animation_list"
    android:theme="@style/AppTheme.NoActionBar">


    <Button
        android:text="DIVINE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btndivine"
        android:theme="@style/MyButton"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnabst"
        android:layout_alignStart="@+id/btnabst"
        android:layout_marginBottom="58dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white" />

    <Button
        android:text="POTRAIT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnpot"
        android:theme="@style/MyButton"
        android:layout_above="@+id/btndivine"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white" />

    <Button
        android:text="NATURE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnnature"
        android:background="@android:color/transparent"
        android:theme="@style/MyButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btnabst"
        android:textColor="@android:color/white" />

    <Button
        android:text="CRAFT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btncraft"
        android:theme="@style/MyButton"
        android:layout_above="@+id/btnnature"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white" />

    <Button
        android:text="ABSTRACT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnabst"
        android:theme="@style/MyButton"
        android:layout_above="@+id/btndivine"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="46dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/white" />

    <TextView
        android:text=" PAINTINGS"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-medium"
        android:textSize="28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:textColorHighlight="@android:color/white" />
</RelativeLayout>
